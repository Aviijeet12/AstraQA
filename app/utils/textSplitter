// utils/textSplitter.ts
export function splitTextIntoChunks(text: string, maxChars = 1500, overlap = 200) {
  const chunks: string[] = [];
  let start = 0;
  while (start < text.length) {
    const end = Math.min(start + maxChars, text.length);
    const slice = text.slice(start, end);
    chunks.push(slice);
    start = end - overlap;
    if (start < 0) start = 0;
  }
  return chunks;
}
